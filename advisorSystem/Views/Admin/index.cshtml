    function acceptApply(tg_id, s_id, t_id ,t_name, accept) {
        var data = {
            "tg_id": tg_id,
            "t_id": t_id,
            "s_id": s_id,
            "accept": accept
        }
        if (accept)
            $("#accept").text("同意");
        else
            $("#accept").text("不同意");
        $("#teacher").text(t_name);
        $("#dialog-acceptApply").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            modal: true,
            buttons: {
                "確定": function () {
                    $(this).dialog("close");
                    $.ajax({
                        type: "POST",
                        url: "/admin/UpdateStudentApply",
                        data: data,
                        dataType: "json",
                        success: function (data) {
                            console.log("success");
                            loadStudentInfo(s_id);
                            getStudentList();
                        }
                    })
                },
                "取消": function () {
                    data.thesis_state = 2;
                    $(this).dialog("close");
                }
            }
        });

    }
    function acceptChange(sc_id, org_tg_id, new_tg_id, s_id, t_id, sc_allapproval, accept) {
