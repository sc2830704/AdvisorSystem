            "s_id": s_id,
            "t_id": t_id,
            "thesis_state": 1,
            "sc_allapproval": sc_allapproval,
            "accept": accept
        }
        if (accept == 1) {
            $("#dialog-acceptChange").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            modal: true,
            buttons: {
                "同意論文共用主題": function () {
                    $(this).dialog("close");
                    UpdateStudentChange(data, s_id);
                },
                "不同意論文共用主題": function () {
                    data.thesis_state = 2;
                    $(this).dialog("close");
                    UpdateStudentChange(data, s_id);
                }
            }
        });
        } else {
            UpdateStudentChange(data, s_id);
        }
        

    }
